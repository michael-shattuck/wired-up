{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "types": [
      "node",
      "jest"
    ],
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "example"
  ]
}